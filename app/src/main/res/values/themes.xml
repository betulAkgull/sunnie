<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Weatherapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/sfpromedium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Weatherapp" parent="Base.Theme.Weatherapp" />

    <style name="textHeader">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/header</item>
        <item name="fontFamily">@font/sfproregular</item>
    </style>

    <style name="textSmall">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="fontFamily">@font/sfproregular</item>
    </style>

    <style name="textMedium">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="fontFamily">@font/sfprobold</item>
    </style>

    <style name="textLarge">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="fontFamily">@font/sfproregular</item>
    </style>

    <style name="cardItem">
        <item name="android:background">@drawable/bg_gradient</item>
    </style>

    <style name="layoutBackground">
        <item name="android:background">@drawable/bg_layout</item>
    </style>

    <style name="buttonSmall">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:width">@dimen/btnWidthSmall</item>
        <item name="android:height">@dimen/btnHeightSmall</item>
    </style>

    <style name="buttonLarge">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:width">@dimen/btnWidthLarge</item>
        <item name="android:height">@dimen/btnHeightLarge</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="editText">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:width">@dimen/editTextWidth</item>
        <item name="android:height">@dimen/editTextHeight</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>
</resources>